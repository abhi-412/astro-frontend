// Set content width to be double the original element width
contentElement.style.width = `${elementWidth * 2}px`;
// contentClone.style.width = `${elementWidth * 2}px`;

// Function to animate scrolling
function animateScroll() {
  const currentScrollPosition = contentElement.scrollLeft;

  // Check if content has scrolled completely
  if (currentScrollPosition + elementWidth >= elementWidth ) {
    contentElement.scrollLeft = 0; // Reset scroll position
  } else {
    contentElement.scrollLeft += scrollSpeed; // Update scroll position
  }

  // Schedule next animation frame
  requestAnimationFrame(animateScroll);
}

// Start the animation loop
animateScroll();
}

